<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FlightTicketDetailActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/image_background" />
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_back_white"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:id="@+id/date_of_flight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 December 2022"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date_of_flight_tv"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        >

                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/code_departure_airport_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DEL"
                                android:textColor="@color/black"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/name_departure_airport_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delhi International Airport"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <ImageView
                            android:layout_weight="6"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:src="@drawable/background_image_ticket" />

                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/code_arrival_airport_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DEL"
                                android:textColor="@color/black"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/name_arrival_airport_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delhi International Airport"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="normal" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/time_of_flight_selectFlight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04h 30m"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ticket_Rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

</LinearLayout>