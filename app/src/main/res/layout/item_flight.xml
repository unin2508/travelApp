<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_flight_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="#9747FF"
    android:layout_margin="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/airline_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                />
            <TextView
                android:id="@+id/airline_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VietnamAirline"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#272727"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/departure_airport_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/departure_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/time_flight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04h 15m"
                android:textSize="16sp"
                android:textColor="#6C19D8"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/arrive_airport_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/time_arrive_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/minPrice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>